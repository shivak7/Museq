instrument Drums {
    soundfont "sounds/GeneralUser GS v1.471.sf2"
    bank 128
}

function Beat {
    Drums {
        sequence {
            note 36 250 100 // Kick
            note 42 250 100 // Hat
            note 38 250 100 // Snare
            note 42 250 100 // Hat
        }
    }
}

instrument Piano {
    soundfont "sounds/GeneralUser GS v1.471.sf2"
    bank 0
    preset 0
}

loop start Beat
    Rest {
        note R 2000 0
    }
    Piano {
        sequence {
            note C4 1000 100
        }
    }
loop stop