// Test script for SoundFont portamento and envelope re-triggering
instrument PortaSf {
    soundfont "sounds/GeneralUser GS v1.471.sf2"
    bank 0
    preset 0 // Piano
    envelope 0.1 0.1 0.8 0.2
    portamento 500 // Long glide
}

sequential {
    PortaSf { notes C4(1000), G4(1000), C5(1000) }
}
