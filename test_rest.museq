function Beat {
    instrument Drums {
        soundfont "/home/shiva/Museq/sounds/GeneralUser GS v1.471.sf2"
        bank 128
        sequence {
            note 36 250 100 // Kick
            note 42 250 100 // Hat
            note 38 250 100 // Snare
            note 42 250 100 // Hat
        }
    }
}

loop start Beat
    Rest {
        note R 2000 0
    }
    instrument Piano {
        soundfont "/home/shiva/Museq/sounds/GeneralUser GS v1.471.sf2"
        bank 0
        preset 0
        sequence {
            note C4 1000 100
        }
    }
loop stop